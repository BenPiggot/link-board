<div class="container">
<%= render 'layouts/flash' %>
<h1>Posts</h1>
<div class="table-responsive">
 <table class="table table-condensed">
 <tr>
    <th>Links</th>
    <th>Score</th>
    <th>Vote</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Comment</th>
<% @posts.each do |p| %>
<tr>

  <td><a href=<%= p.link %>><%= p.title %></a></td>

  <td><%= p.votes.to_a.inject(0) { |sum, n| sum + n.value } %> </td>

  <td>
  <%= bootstrap_form_for [p, @vote] do |f| %>
  <%= f.hidden_field :value, value: "1" %>
  <%= f.button "", class: "btn btn-primary btn-xs glyphicon glyphicon-thumbs-up form-glyphs" %>
  <% end %>

  <%= bootstrap_form_for [p, @vote] do |f| %>
  <%= f.hidden_field :value, value: "-1" %>
  <%= f.button "", class: "btn btn-primary btn-xs glyphicon glyphicon-thumbs-down form-glyphs" %>
<% end %>
</td>

<td>
 <%= link_to '', edit_post_path(p.id), :class=>"btn-xs btn-info glyphicon glyphicon-edit" %>
 </td>

 <td>
      <%= link_to '', post_path(p.id), :method => :delete, :data => { confirm: "Are you sure you want to delete this item?" }, :class=>"btn-xs btn-danger glyphicon glyphicon-trash" %>
</td>

<td>
      <%= link_to '', post_path(p.id), :class => "btn-xs btn-success glyphicon glyphicon-search" %>

</td>




<% end %>
</table>
</div>
</div>


