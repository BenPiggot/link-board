<div class="container">

<h1 class="text-center">Sign Up for an Account</h1>

<%= bootstrap_form_for :user do |f| %>
  <%= f.text_field :name, placeholder: "Enter your full name"%>
  <%= f.text_field :email, placeholder: "Enter your email"%>
  <%= f.text_field :password, placeholder: "Enter your password", type: "password"%>
  <%= f.submit "Create an Account", class: "btn btn-info" %>

<% end %>

</div>